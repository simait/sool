module IntegerTypes {

	// 8-bit values.
	typedef integet_t from [-(1<<7)..(1<<7)-1]	int8_t;		// [-128..127]
	typedef integet_t from [0..(1<<8)-1]		uint8_t;	// [0..255]

	// 16-bit values.
	typedef integet_t from [-(1<<15)..(1<<15)-1]	int16_t;	// [-32768..32767]
	typedef integet_t from [0..(1<<16)-1] 		uint16_t;	// [0..65535]

	//32-bit values.
	typedef integet_t from [-(1<<31)..(1<<31)-1]	int32_t;	// [-2147483648..2147483647]
	typedef integet_t from [0..(1<<32)-1]		uint32_t;	// [0..4294967295]

}